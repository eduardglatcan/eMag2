@model eMag2.ViewModels.NewProductViewModel
@{
    ViewBag.Title = "Add a new product";
}

<h2>Add a new product</h2>
<section>
    <div class="container p-5">
        <div class="row">
            <div class="col-md-6">
                @using (Html.BeginForm("UploadProduct", "Colab", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.ValidationSummary(true, "Please fix the following errors:", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name)
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Description)
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", id = "editor" })
                        @Html.ValidationMessageFor(m => m.Description)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.CategoryId)
                        @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categories, "Id", "Name"), "", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.CategoryId)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.FullPrice)
                        @Html.TextBoxFor(m => m.FullPrice, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.FullPrice)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.DiscountedPrice)
                        @Html.TextBoxFor(m => m.DiscountedPrice, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.DiscountedPrice)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.NumberInStock)
                        @Html.TextBoxFor(m => m.NumberInStock, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.NumberInStock)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.InternalCode)
                        @Html.TextBoxFor(m => m.InternalCode, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.InternalCode)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ImagePath)
                        <input id="Image



                           " title="Upload a image" type="file" name="ImageFile" />
                    </div>
                    @Html.HiddenFor(m => m.Id)
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-primary">Save</button>
                }
            </div>
        </div>
    </div>
</section>

@section scripts
{
    <script>
        ClassicEditor
            .create( document.querySelector( '#editor' ) )
            .catch( error => {
                console.error( error );
            } );
    </script>
}
