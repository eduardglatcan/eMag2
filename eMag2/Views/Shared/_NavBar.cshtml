<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("eMag2", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Products", "Index", "Products")</li>
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Colab"))
                    {
                        <li>@Html.ActionLink("Add Product", "AddItem", "Colab")</li>
                    }
                }
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Admin", "Admin", "Manager")</li>
                    }
                }
                <li>
                    <a href="@Url.Action("GetCart", "Cart")" class="btn btn-info btn-lg">
                        <i class="fas fa-shopping-cart"></i>
                        @{
                            if (Session["cartCount"] != null)
                            {
                                @Session["cartCount"]
                            }
                        }
                        My Cart <i class="fas fa-arrow-down"></i>
                    </a>
                </li>
            </ul>
            <div class="col-sm-3 col-md-3">
                @using (Html.BeginForm("Search", "Products", FormMethod.Get, new { @class = "navbar-form" }))
                {
                    <div class="input-group">
                        @Html.TextBox("searchedWord", null, new{@class="form-control", @placeholder="Search Products..."})
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>
                    </div>
                }
            </div>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>