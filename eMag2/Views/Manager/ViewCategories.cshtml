@model System.Collections.Generic.List<eMag2.Models.Category>

@{
    ViewBag.Title = "title";
}

<h2>Categories</h2>
<section>
    <div class="container p-5" style="background: white;">
        <div class="row">
            <table class="table-bordered table table-striped">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>
                            @Html.ActionLink("Edit Category", "EditCategory", "Manager", new {@category.Id}, new {@class = "btn btn-warning"})
                        </td>
                        <td>
                            @Html.ActionLink("Delete Category", "DeleteCategory", "Manager", new { @category.Id }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
                </tbody>
            </table>
            @Html.ActionLink("Add a New Category", "NewCategory", "Manager", null, new {@class = "btn btn-success"})

        </div>
    </div>
</section>